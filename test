#include <stdio.h>
#include <stdlib.h>

int num_of_strings(const char *s, char c)
{
    int i = 0;
    int nos = 0;

    if (s[0] == c)
    {
        i++;
    }
    nos++;
    while (s[i])
    {
        if (s[i - 1] != c && s[i] == c)
        {
            if (s[i + 1] == '\0')
                break;
            nos++;
        }
        i++;
    }
    return (nos);
}
int string_str_len(const char *s, char c)
{
    int i = 0;
    int len = 0;
    if (s[i] == c)
        i++;
    while (s[i] && s[i] != c)     //-khalil-sohail--is-sohail-khalil-khalil
    {
        i++;
        len++;
    }
    if (s[len] != c && s[len + 1] == c)
        len++;
    return (len);
}
char **ft_split(char const *s, char c)
{
    int i = 0;
    int j = 0;
    int k = 0;
    int l;
    int nos = num_of_strings(s, c);
    char **ptr = (char **)malloc((nos + 1) * sizeof(char *));

    while (i < nos)                                   //            -khalil-sohail-is-sohail-khalil-
    {
        j = string_str_len(s, c);
        ptr[i] = (char *)malloc(j * sizeof(char));
        l = 0;
        if (*s == c)
            s++;
        while (k < j && *s != c && *s != '\0')
        {
            ptr[i][l] = (char)*s;
            s++;
            l++;
        }
        ptr[i][l] = '\0';
        i++;
    }
    ptr[i] ='\0';
    return (ptr);
}int main()
{
    char *s = "-k-s-j--i--k-l";
    char c = '-';
    //ft_splti test
    char **ptr = ft_split(s, c);
    for (int i = 0; i < 6; i++)
    {
        printf("%s\n", ptr[i]);
    }
    
}